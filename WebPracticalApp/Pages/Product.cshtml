@page "{id:int}"
@model ProductModel
@{
    // Устанавливаем заголовок страницы равным имени товара
    ViewData["Title"] = Model.Product?.Name ?? "Товар не найден";
}

@if (Model.Product != null)
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <!-- Здесь можно разместить изображение товара, если оно есть -->
                <img src="/@Model.Product.ImageRoute" class="card-img-top" alt="@Model.Product.Name" />
                <!-- Предполагаем, что у товара есть изображение -->
            </div>
            <div class="col-md-6">
                <h1>@Model.Product.Name</h1>
                <p class="lead">@Model.Product.Description</p> <!-- Предполагаем, что у товара есть описание -->
                <hr />
                <h3 class="text-success">Цена: @Model.Product.Price.ToString("C")</h3>
                <br />
                <button class="btn btn-primary btn-lg">Купить</button>
            </div>
        </div>
        <div class="mt-4">
            <a asp-page="/Products" class="btn btn-secondary">← Назад к списку товаров</a>
        </div>
    </div>
}

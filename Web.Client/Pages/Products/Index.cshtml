@page
@model PetShop.Web.Client.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product Catalog";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="/img/product/@(item.ImageUrl ?? "placeholder").jpg"
                     class="card-img-top"
                     alt="@item.Name"
                     style="height: 200px; object-fit: cover;"
                     onerror="this.onerror=null;this.src='/img/product/placeholder.jpg';" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        @if (item.Description != null && item.Description.Length > 100)
                        {
                            @(item.Description.Substring(0, 100) + "...")
                        }
                        else
                        {
                            @item.Description
                        }
                    </p>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Price.ToString("C")</h6>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary mt-auto">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Пагинация -->
<nav>
    <ul class="pagination justify-content-center">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="./Index" asp-route-currentPage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</nav>